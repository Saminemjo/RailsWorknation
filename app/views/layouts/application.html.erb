<!DOCTYPE html>
<html>
  <head>
    <title>WorkNation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag href="https://fonts.googleapis.com/css?family=Oxygen:300,400" %>
    <%= stylesheet_link_tag  href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <div class="home-loader"></div>
    <div id="page">
      <div class="container-wrap">
        <%= render "layouts/navbar" %>

        <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name %>"><%= msg %></div>
        <% end %>

        <%= yield %>
      </div>
      <%= render "layouts/footer" %>
    </body>
  </html>
