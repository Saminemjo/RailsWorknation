<aside id="home-slides">
  <div class="flexslider">
    <ul class="slides">
      <li style="background-image: url(/assets/img_bg_4.jpg);">
        <div class="overlay-gradient"></div>
        <div class="container-fluids">
          <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3 slider-text slider-text-bg">
              <div class="slider-text-inner text-center">
                <h1>Subscribe to the Waiting-List</h1>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</aside>
<div id="home-work" class="home-light-grey">
  <div class="row text-center">
    <% if @request.errors.any? %>
    <div class="alert alert-danger">
      <% @request.errors.full_messages.each do |message| %>
      <%= message %>
      <br>
      <% end %>
    </div>
    <% end %>
    <div class="col-md-offset-3 col-md-6">
      <%= form_for @request do |f|%>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class:'form-control'%>
      </div>
      <div class="form-group">
        <label>Email address</label>
        <%= f.text_field  :email, class:'form-control'%>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label>Phone</label>
        <%= f.text_field :phone, class:'form-control'%>
      </div>
      <div class="form-group">
        <label>Biography</label>
        <%= f.text_area :biography, class:'form-control'%>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary ">Submit</button>
      </div>
      <%end%>

    </div>
  </div>
</div>
